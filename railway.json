{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3,
    "startCommand": "npm start",
    "healthchecks": {
      "cpu": {
        "percentage": 80
      },
      "memory": {
        "percentage": 80
      },
      "http": {
        "path": "/health",
        "port": 5000,
        "scheme": "http",
        "interval": 30,
        "timeout": 5
      }
    }
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/nixpacks"
    }
  ]
}
