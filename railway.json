{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 600,
    "sleepApplication": false,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  },
  "plugins": [
    {
      "source": "mongo"
    }
  ]
}
