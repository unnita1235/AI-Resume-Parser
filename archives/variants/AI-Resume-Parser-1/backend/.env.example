# ==================== SERVER ====================
PORT=5000
NODE_ENV=production

# ==================== DATABASE ====================
# Free tier: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/resume-parser?retryWrites=true&w=majority

# ==================== FILE UPLOADS ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ==================== AI/ML ====================
# Get free key: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# ==================== DEPLOYMENT ====================
# Set to true to always use demo data and skip AI
DEMO_MODE=false

# Railway/Render keeps containers alive (no sleeping)
RAILWAY_ENVIRONMENT_NAME=production
