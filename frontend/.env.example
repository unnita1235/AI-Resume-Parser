# Frontend Environment Variables
# Copy this file to .env.local and update with your actual values

# Backend API Configuration
# The URL where your backend Express server is running
# For local development: http://localhost:5000
# For production: Your deployed backend URL (e.g., https://your-render-app.onrender.com)
REACT_APP_API_URL=http://localhost:5000

# Enable Debug Mode (optional)
# Set to true to enable detailed console logging
REACT_APP_DEBUG=false

# Resume Parser Configuration
# Maximum file size for resume uploads (in bytes)
# Default: 5MB (5242880 bytes)
REACT_APP_MAX_FILE_SIZE=5242880

# API Timeout (in milliseconds)
# Time to wait for backend response before timing out
# Default: 30 seconds (30000ms)
REACT_APP_API_TIMEOUT=30000
