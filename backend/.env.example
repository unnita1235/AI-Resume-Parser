PORT=5000
NODE_ENV=development

# Google Gemini API Key (REQUIRED for AI parsing)
# Get your free API key: https://aistudio.google.com/app/api-keys
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# MongoDB Connection String (OPTIONAL but recommended)
# Get free tier: https://cloud.mongodb.com
# Example: mongodb+srv://username:password@cluster.mongodb.net/resumes
MONGODB_URI=

# CORS Whitelist (comma-separated URLs for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_WHITELIST=https://ai-resume-parser-seven.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Demo Mode (set to true to bypass API requirements for testing)
DEMO_MODE=false

# Keep-Alive for Free Tier Hosting (Render, Railway, etc.)
# Ping interval in milliseconds (25000 = 25 seconds)
KEEP_ALIVE_INTERVAL=25000

# API Authentication Keys (comma-separated for multiple keys)
# These keys can be used to access authenticated endpoints
# Example: key1,key2,key3
VALID_API_KEYS=
